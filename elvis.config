[{elvis, [
    {config, [
        #{ dirs => ["*/src/**", "*/test/**"]
         , filter => "*.erl"
         , ruleset => erl_files
         % these are not enforced by default, so are added here for completeness
         , rules => [{elvis_style, max_module_length, #{}}
		    ,{elvis_style, no_common_caveats_call, #{}}
		    ,{elvis_text_style, no_tabs, #{}}
		    ,{elvis_style, no_dollar_space, #{}}
		    ,{elvis_style, dont_repeat_yourself, #{ min_complexity => 50 }}
		    ,{elvis_style, no_debug_call, #{debug_functions => []}} % allow debug calls 
		    ,{elvis_style, function_naming_convention, #{ regex => "^[a-z]([a-z0-9]*_?)*$" }}
		    ,{elvis_style, atom_naming_convention, #{ regex => "^[a-z]([a-z0-9]*_?)*(_SUITE)?$"
                                       , enclosed_atoms => ".*"
                                       }}
		    ,{elvis_style, god_modules, #{ ignore => [tools, intcode]}}
		    ,{elvis_style, no_block_expressions, disable}
                    ]
         }
      , #{ dirs => ["."]
         , filter => "rebar.config"
         , ruleset => rebar_config
         , rules => [] }
      , #{ dirs => ["."]
         , filter => "elvis.config"
         , ruleset => elvis_config
         , rules => [] }
    ]}
  %%, {verbose, true}
]}].
